      .navbar-inner
        .container
          %a.btn.btn-navbar{:data-toggle="collapse", data-target=".nav-collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "MySpot", root_path, :class => 'brand'
